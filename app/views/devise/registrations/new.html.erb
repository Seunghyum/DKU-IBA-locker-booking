<div class='col-xs-12 col-sm-3 col-md-3 col-lg-4'>
</div>
<div class="login col-xs-12  col-sm-6 col-md-6 col-lg-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="form-group">
      <%= f.label :email, "대학교 웹메일" %> (비밀번호 찾기 시 필요 )<br />
      <%= f.email_field :email, class: "form-control username", autofocus: true %>
    </div>
    
    <div class="form-group">
      <%= f.label :username, "실명" %> (실명이 아닐 시 검사 후 아이디 삭제)<br />
      <%= f.text_field :username, class: "form-control username" %>
    </div>
    
    <div class="form-group">
      <%= f.label :user_major, "전공" %><br />
      <%= f.select(:user_major, Major.all.collect {|u| [u.mname, u.mname]}, {}, { :class => 'browser-default'}) %>
    </div>
    <div class="form-group">
      <%= f.label :user_submajor, "부전공" %><br />
      <%= f.select(:user_submajor, Major.all.collect {|u| [u.mname, u.mname]}, {}, { :class => 'browser-default'}) rescue nil%>
    </div>
    
    <div class="form-group">
      <%= f.radio_button :gender, false%> <%= f.label :gender_false, "남자" %> 
      <%= f.radio_button :gender, true, checked: true %> <%= f.label :gender_true, "여자" %> 
    </div>
    
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control password" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control password" %>
    </div>
  
    <div class="form-group">
      <%= f.submit "Sign up", class: "submit" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
  
</div>
<div class='col-xs-12 col-sm-3 col-md-3 col-lg-4'>
</div>