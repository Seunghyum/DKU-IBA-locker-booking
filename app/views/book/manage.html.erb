                <td><%= y.user.username %></td>
                <td><%= y.user.user_student_num %></td>
            <% else %>
                <td class='red'>미정</td>
                <td class='red'>미정</td>
            <% end %>
          </tr>
        <% end %>
        
        </tbody>
    </table>
<div class="col-md-8"></div>
<div class="col-md-4">
<%= link_to "/book/index", method: "get" do %>            
