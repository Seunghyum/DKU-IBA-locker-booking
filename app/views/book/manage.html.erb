<div class="login">
    <h4 class='blue-1'><strong><i class="fa fa-caret-right"></i>전체 도서 현황</strong></h4>
    <table class="table" id='book'>
        <tbody>
        
          <tr>
            <td>제목</td>
            <td>책주인</td>
            <td>대여자</td>
            <td>대여자 학번</td>
          </tr>
          
        <% @book.each do |y| %>
          <tr>
            <td><%= y.btitle %></td>
            <td>IBA</td>
